{% extends 'public.template.html.twig' %}

{% block title %}{{ parent() }} Administration | Voir l'article{% endblock %}

{% block menuLinks %}
    {% include 'admin/back.menu.html.twig' %}
{% endblock %}

{%block htitle %}Administration | Voir l'article{% endblock %}
{%block hdesc %}Détail de l'article{% endblock %}

{% block boutonshauts %}

{% endblock %}

{% block articlePerOne %}
    <h1>Détail de l'article</h1>
    <p class="mt-2"><a class="btn btn-primary" href="{{ path('app_admin_article_index') }}">Retour à la liste</a></p>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>TitleSlug</th>
                <td>{{ article.titleSlug }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>ArticleDateCreate</th>
                <td>{{ article.articleDateCreate ? article.articleDateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ArticleDatePosted</th>
                <td>{{ article.articleDatePosted ? article.articleDatePosted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <p class="mt-2"><a class="btn btn-primary" href="{{ path('app_admin_article_index') }}">Retour à la liste</a></p>

    <p><a class="btn btn-warning" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">Modifier</a></p>

    {{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}
